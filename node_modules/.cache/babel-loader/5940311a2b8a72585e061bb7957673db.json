{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport { topicList } from '@/api/topic/index.js';\nexport default {\n  data() {\n    return {\n      topicInfo: [],\n      loading: false,\n      finished: false,\n      page: 1\n    };\n  },\n  methods: {\n    onLoad() {\n      // 异步更新数据\n      this.page++;\n      this.init();\n    },\n    init() {\n      topicList({\n        page: this.page\n      }).then(res => {\n        this.topicInfo.push(...res.data);\n        this.loading = false;\n        // 数据全部加载完成\n        if (this.page === res.total) {\n          this.finished = true;\n        }\n      });\n    }\n  },\n  created() {\n    this.init();\n  }\n};","map":{"version":3,"mappings":";AAcA;AACA;EACAA;IACA;MACAC;MACAC;MACAC;MACAC;IACA;EACA;EACAC;IACAC;MACA;MACA;MACA;IACA;IACAC;MACAC;QAAAJ;MAAA;QACA;QACA;QACA;QACA;UACA;QACA;MACA;IACA;EACA;EAEAK;IACA;EACA;AACA","names":["data","topicInfo","loading","finished","page","methods","onLoad","init","topicList","created"],"sourceRoot":"src/views/topic","sources":["index.vue"],"sourcesContent":["<template>\r\n  <div class=\"container\">\r\n    <van-list v-model=\"loading\" :finished=\"finished\" finished-text=\"没有更多了\" @load=\"onLoad\" :immediate-check=\"false\">\r\n      <div class=\"topicList\" v-for=\"item in topicInfo\" :key=\"item.id\">\r\n        <img :src=\"item.scene_pic_url\" />\r\n        <p class=\"title\">{{ item.title }}</p>\r\n        <p class=\"subtitle\">{{ item.subtitle }}</p>\r\n        <p class=\"price\">{{ item.price_info }}元起</p>\r\n      </div>\r\n    </van-list>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport { topicList } from '@/api/topic/index.js'\r\nexport default {\r\n  data() {\r\n    return {\r\n      topicInfo: [],\r\n      loading: false,\r\n      finished: false,\r\n      page: 1\r\n    }\r\n  },\r\n  methods: {\r\n    onLoad() {\r\n      // 异步更新数据\r\n      this.page++\r\n      this.init()\r\n    },\r\n    init() {\r\n      topicList({ page: this.page }).then(res => {\r\n